.table_box_big {
  overflow-x: scroll;
  overflow-y: hidden;
  position: relative;
  height: 350px;
}
.table_box {
  overflow: hidden;
  position: absolute;
}
.table_tbody_box {
  height: 300px;
  overflow: scroll;
}
.div-table {
  display: table;
  border: 1rpx solid #666;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  table-layout: fixed;
  position: relative;
}
.div-table.div-table-head {
    border-bottom: 0;
}
.div-table .tr,
  .div-table .th {
    display: table-row;
}
.div-table .tr + .tr .td,
    .div-table .tr + .tr .th,
    .div-table .tr + .th .td,
    .div-table .tr + .th .th,
    .div-table .th + .tr .td,
    .div-table .th + .tr .th,
    .div-table .th + .th .td,
    .div-table .th + .th .th {
      border-top: 1rpx solid #666;
      word-break: break-word;
}
.div-table .td {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    z-index: 1;
    position: relative;
}
.div-table .td .td_wrap {
      position: relative;
      width: 220rpx;
      padding: 10rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      overflow: hidden;
      line-height: 1.6;
}
.div-table .td.celspan {
      position: relative;
      width: 440rpx;
      z-index: 10;
      position: absolute;
}
.div-table .td.celspan .td_wrap {
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        position: absolute;
}
.div-table .td.rowspan {
      position: absolute;
      width: 220rpx;
      z-index: 10;
}
.div-table .td.empty-cells {
      opacity: 0;
}
.div-table .td.noPadding {
      padding: 0;
}
.div-table .td + .td {
      border-left: 1rpx solid #666;
}
.div-table .th .td {
    font-weight: bold;
}
.div-table .tbody {
    display: table-row-group;
}
.div-table .thead {
    display: table-header-group;
}
.div-table .thead .tr .td,
    .div-table .thead .tr .th,
    .div-table .thead .th .td,
    .div-table .thead .th .th {
      width: 120rpx;
      height: 75px;
}
.div-table .colgroup {
    display: table-column-group;
}
.div-table .col {
    display: table-column;
}
.div-table .caption {
    display: table-caption;
}
